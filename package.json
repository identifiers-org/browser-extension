{
  "name": "identifiersorg-extension",
  "version": "1.0.0",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "description": "Cross-browser extension for identifiers.org",
  "scripts": {
    "webext:run": "web-ext run --source-dir ./dist/ -u 'https://registry.identifiers.org/registry/uniprot'",
    
    "clean": "rm -Rf dist/ .parcel-cache && mkdir dist",
    
    "inject:firefox": "run-p inject:manifest:firefox inject:others",
    "inject:chrome": "run-p inject:manifest:chrome inject:others",
    "inject:others": "cp -R node_modules/webextension-polyfill/dist/browser-polyfill.min.js background.js icons dist/",
    "inject:manifest:firefox": "cp manifests/firefox.json dist/manifest.json",
    "inject:manifest:chrome": "cp manifests/chrome.json dist/manifest.json",

    "build:popup": "parcel build --dist-dir dist/ popup/popup-index.html ",
    
    "package:firefox": "cd dist/ && bestzip extension-firefox.zip * && mv extension-firefox.zip ..",
    "package:chrome": "cd dist/ && bestzip extension-chrome.zip * && mv extension-chrome.zip ..",

    "build:firefox": "NODE_ENV=production run-s clean inject:firefox build:popup package:firefox",
    "build:chrome": "NODE_ENV=production run-s clean inject:chrome build:popup package:chrome",
    "build:all": "run-s build:firefox build:chrome"
  },
  "author": {
    "name": "Renato Caminha Juacaba Neto",
    "url": "https://github.com/renatocjn"
  },
  "license": "MIT",
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "bestzip": "^2.2.1",
    "bootstrap": "^5.3.8",
    "ebi-framework": "^1.4.0-rc.1",
    "EBI-Icon-fonts": "^1.3.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.13.2",
    "prop-types": "^15.8.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "watch": "^1.0.2",
    "web-ext": "^8.3.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.13.2",
    "@types/bootstrap": "^5.2.10",
    "process": "^0.11.10",
    "svgo": "^3.3.2"
  },
    "engines" : { 
    "npm" : ">=11.0.0",
    "node" : ">=24.0.0"
  }
}
