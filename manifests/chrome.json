{
  "manifest_version": 3, 
  "name": "Identifiers.org",
  "description": "Identifiers.org provides consistent access to life science data. This add-on aims to facilitate the use of identifiers.org URIs.",
  "version": "1.0.0",
  "icons": {
    "128": "icons/logo128.png",
    "64": "icons/logo64.png",
    "32": "icons/logo32.png"
  },
  "permissions": [
    "contextMenus", 
    "clipboardWrite", 
    "notifications",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.ebi.ac.uk/ebisearch/ws/rest/identifiers_registry",
    "https://resolver.api.identifiers.org/reverse/byPrefix",
    "*://identifiers.org/"
  ],
  "action": {
    "default_title": "identifiers.org extension",
    "default_popup": "popup-index.html",
    "default_icon": "icons/logo64.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}